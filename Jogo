package padrao;

public class Jogo {
    public static void main(String[] args) {
        // Criação do baralho e embaralhamento
        Baralhobj baralho = new Baralhobj();
        baralho.gerarBaralho();
        baralho.embaralhar();

        // Criação do dealer
        Dealer dealer = new Dealer(baralho);

        // Criação dos jogadores
        Jogador jogador = new Jogador() {
            @Override
            public void comprarCarta(Carta carta) {
                maoJogador.add(carta);
                numCartas++;
            }

            @Override
            public void comprarCartas(ArrayList<Carta> cartas) {
                maoJogador.addAll(cartas);
                numCartas += cartas.size();
            }

            @Override
            protected void exibirMao() {
                System.out.println("Sua mão:");
                for (Carta carta : maoJogador) {
                    carta.exibir();
                }
            }
        };

        // Jogador recebe duas cartas
        dealer.darCartas(jogador);
        jogador.exibirMao();

        // Continuar o jogo...
    }
}
